extends shared/_master

block body
    div(id="contact-page")
        div(class="row")
            div(class="col-sm-6")
                h2(id="form-title" class="form-title")
                    | CONTACT FORM
                form(id="contact-form" class="form-group")
                    input(class="form-control" type="text" placeholder="Name")
                    input(class="form-control" type="email" placeholder="E-mail Address")
                    input(class="form-control" type="text" placeholder="Subject")
                    textarea(class="form-control" placeholder="Message")
            div(class="col-sm-6")
                h2(class="form-title")
                    | CONTACT INFORMATION
