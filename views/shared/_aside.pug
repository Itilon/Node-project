mixin aside
    aside(class="col-sm-4")
        form(action="/search" method="get")
            input(id="search" class="form-control" type="search" placeholder="Search" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search'" name="search")
        div(class="aside-title")
            h2(id="latest-posts")
                | Latest Posts
        ul
            each post in model
                li
                    div(class="grid-wrapper")
                        div(class="left-grid")
                            img(src=post.url class="img-fluid")
                        div(class="right-grid")
                            h3
                                a(href="/post/" + post._id)
                                    =post.title
                            p
                                =post.content[0]
        div(class="aside-title")
            h2
                | Categories
        ul
            each category in categories
                        li(id="category-list")
                            h3(id="category-title" class="category")
                                a(href="/category/" + category._id)
                                    = "|| " + category.name