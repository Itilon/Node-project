extends shared/_master
include shared/_aside

block body
    div(id="main-content" class="container")
        div(class="row")
            main(id="main-category" class="col-sm-8")
                div(id="category-header")
                    h1
                        =category.name
                each article in category.articles
                    div
                        a(href="/post/" + article._id)
                            img(src=article.url class="img-responsive cat-img")
                        h2
                            a(href="/post/" + article._id)
                                =article.title
                        p
                            =article.content
            +aside(model, categories)
        